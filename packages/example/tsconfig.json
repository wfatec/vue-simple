{
  "compilerOptions": {
    "strict": true, 
    "target": "es5",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
